{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6 offset-3">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">Sign Up</h1>
                    <form method="POST" autocomplete="off" action="{{ path_for('auth.signup') }}">
                        <div class="form-group">
                            <label>Email address</label>
                            <input type="email" class="form-control{{ errors.email ? ' is-invalid' :'' }}" name="email" placeholder="Enter email">
                            {% if errors.email %}
                                <small class="form-text text-danger">{{ errors.email }}</small>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <label>Your name</label>
                            <input type="text" class="form-control{{ errors.name ? ' is-invalid' :'' }}" name="name" placeholder="Enter your name">
                            {% if errors.name %}
                                <small class="form-text text-danger">{{ errors.name }}</small>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control{{ errors.password ? ' is-invalid' :'' }}" name="password" placeholder="Password">
                            {% if errors.password %}
                                <small class="form-text text-danger">{{ errors.password }}</small>
                            {% endif %}
                        </div>
                        <button type="submit" class="btn btn-primary">Sing up</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}